{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "electron"],
    "lib": ["ES2021", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
